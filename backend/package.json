{
  "name": "stratoai-backend",
  "version": "1.0.0",
  "description": "Modular white-label SaaS backend for StratoAI",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.js",
    "test": "node --test tests/**/*.test.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "test:integration": "node --test tests/integration/*.test.js",
    "test:unit": "node --test tests/unit/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage tests/**/*.test.js",
    "test:campaigns": "node --test tests/integration/campaigns.test.js",
    "test:webhooks": "node --test tests/integration/webhooks.test.js",
    "test:auth": "node --test tests/integration/auth.test.js",
    "test:validation": "node --test tests/integration/validation.test.js",
    "test:cursor": "node test-cursor-integration.js",
    "test:frontend": "node test-frontend-integration.js",
    "test:full": "npm run test:cursor && npm run test:frontend",
    "deploy": "node scripts/deploy.js",
    "deploy:staging": "node scripts/deploy.js staging",
    "deploy:production": "node scripts/deploy.js production",
    "backup": "node scripts/backup.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "security:audit": "npm audit --audit-level=high",
    "audit:security": "node scripts/security-audit.js",
    "audit:performance": "node scripts/performance-audit.js",
    "audit:comprehensive": "node scripts/comprehensive-audit.js",
    "optimize:database": "node -e \"import('./src/utils/database/optimizer.js').then(m => console.log(m.default.generateIndexScript()))\"",
    "cache:clear": "node -e \"import('./src/utils/cache/manager.js').then(m => m.default.getCache('default').flushall().then(() => console.log('Cache cleared')))\"",
    "health:check": "node -e \"import('./src/utils/health/checks.js').then(m => m.default.runAllChecks().then(r => console.log(JSON.stringify(r, null, 2))))\"",
    "circuit:status": "node -e \"import('./src/utils/resilience/circuitBreaker.js').then(m => console.log(JSON.stringify(m.default.getAllStatus(), null, 2)))\"",
    "keys:status": "node -e \"import('./src/utils/security/apiKeyRotation.js').then(m => console.log(JSON.stringify(m.default.generateReport(), null, 2)))\"",
    "load:test:artillery": "artillery run load-testing/artillery-config.yml",
    "load:test:k6": "k6 run load-testing/k6-script.js",
    "load:test:jmeter": "jmeter -n -t load-testing/jmeter-test-plan.jmx -l results.jtl",
    "docs:serve": "node -e \"import('./src/docs/swaggerUI.js').then(m => console.log('API docs available at http://localhost:3000/api/docs'))\""
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^14.12.0",
    "resend": "^3.2.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "artillery": "^2.0.0",
    "k6": "^0.47.0",
    "jsdom": "^23.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "saas",
    "backend",
    "api",
    "nodejs",
    "express",
    "supabase",
    "stripe",
    "multi-tenant",
    "circuit-breaker",
    "caching",
    "optimization",
    "monitoring",
    "load-testing",
    "performance",
    "security"
  ],
  "author": "StratoAI Team",
  "license": "UNLICENSED"
}